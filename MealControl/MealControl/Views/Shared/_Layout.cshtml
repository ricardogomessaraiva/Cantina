<!DOCTYPE html>
<html ng-app="cantinaApp">
<head>
    <meta charset="utf-8" />
    <title>Cantina | Cadastro</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <meta http-equiv="Content-type" content="text/html; charset=utf-8">
    <meta content="" name="description" />
    <meta content="" name="author" />
    <!-- BEGIN GLOBAL MANDATORY STYLES -->    
    <link href="~/Content/themes/assets/global/plugins/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="~/Content/themes/assets/global/plugins/simple-line-icons/simple-line-icons.min.css" rel="stylesheet" type="text/css">
    <link href="~/Content/themes/assets/global/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="~/Content/themes/assets/global/plugins/uniform/css/uniform.default.css" rel="stylesheet" type="text/css">    
    
    <!-- BEGIN THEME STYLES -->
    <link href="~/Content/themes/assets/global/css/components.css" id="style_components" rel="stylesheet" type="text/css" />
    <link href="~/Content/themes/assets/global/css/plugins.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/themes/assets/admin/layout2/css/layout.css" rel="stylesheet" type="text/css" />
    <link id="style_color" href="~/Content/themes/assets/admin/layout2/css/themes/grey.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/themes/assets/admin/layout2/css/custom.css" rel="stylesheet" type="text/css" />
    @*<link href="https://cdn.rawgit.com/zhaber/datetimepicker/master/datetimepicker.css" type="text/css" rel="stylesheet">*@    
    <!-- END THEME STYLES -->
    <link rel="shortcut icon" href="favicon.ico" />

    <!--scripts--> 
    <script src="~/Content/themes/assets/global/plugins/jquery.min.js" type="text/javascript"></script>
    <script src="~/Content/themes/assets/global/plugins/jquery-migrate.min.js" type="text/javascript"></script>       
    <script src="~/Content/themes/assets/global/plugins/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>    

    <!--Angularjs components-->    
    @*<script src="~/Scripts/angular.min.js"></script>*@
    <script src="~/Scripts/angular.min-1.4.6.js"></script>
    <script src="~/Scripts/angular-bootstrap.js"></script>
    <script src="~/Scripts/angular-ui/ui-bootstrap-tpls.min.js"></script>           
    <script src="~/Scripts/angular-ui/locale_pt-br.js"></script>     
    <script src="~/Scripts/angular-ui/datetimepicker.js"></script> 
    <script src="~/Scripts/moment.js"></script>
    <script src="~/Scripts/angular-modules.js"></script>        

</head>
<body ng-controller="cantinaCtrl" ng-init="init()"
      class="page-header-fixed page-container-bg-solid page-sidebar-closed-hide-logo page-header-fixed-mobile page-footer-fixed1">
    <div class="page-header navbar navbar-fixed-top">
        <!-- BEGIN HEADER INNER -->
        <div class="page-header-inner">
            <!-- BEGIN LOGO -->
            <div class="page-logo">
                <a>
                    <img src="~/Content/themes/assets/admin/layout2/img/logo-default.png" alt="logo" class="logo-default" />
                </a>
                <div class="menu-toggler sidebar-toggler">
                    <!-- DOC: Remove the above "hide" to enable the sidebar toggler button on header -->
                </div>
            </div>
            <!-- END LOGO -->
            <!-- BEGIN RESPONSIVE MENU TOGGLER -->
            <a href="javascript:;" class="menu-toggler responsive-toggler" data-toggle="collapse" data-target=".navbar-collapse">
            </a>
            <!-- END RESPONSIVE MENU TOGGLER -->
            <!-- BEGIN PAGE TOP -->
            <div class="page-top">
                <!-- BEGIN TOP NAVIGATION MENU -->
                <div class="top-menu" ng-model="User">
                    <!-- BEGIN User LOGIN DROPDOWN -->
                    <ul class="nav navbar-nav pull-right">
                        <li class="dropdown dropdown-user">
                            <a href="javascript:;" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown"
                               data-close-others="true">
                                <span class="Username Username-hide-on-mobile" ng-bind="User.Name == null ? 'Bem vindo, Novo usuário': 'Bem vindo, '+User.Name">
                                </span>
                                <i class="fa fa-angle-down"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-default">
                                <li>
                                    <a ng-click="logoff()">
                                        <i class="icon-key"></i> Desconectar
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <!-- END User LOGIN DROPDOWN -->
                    </ul>
                </div>
                <!-- END TOP NAVIGATION MENU -->
            </div>
            <!-- END PAGE TOP -->
        </div>
        <!-- END HEADER INNER -->
    </div>
    <div class="clearfix">
    </div>
    <div class="page-container">

        @{Html.RenderPartial("SideMenu");}
        <!-- BEGIN CONTENT -->
        <div class="page-content-wrapper">
            <div class="page-content">
                <!-- BEGIN PAGE CONTENT-->
                <div class="row">
                    <div class="col-md-12">
                        <!--PAGE CONTENT BEGIN-->
                        @RenderBody()
                        <hr />
                        <!--PAGE CONTENT END-->
                    </div>
                </div>
                <!-- END PAGE CONTENT-->
            </div>
        </div>
        <!-- END CONTENT -->
    </div>

    @{Html.RenderPartial("Footer");}

</body>
</html>